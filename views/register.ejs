<%- include('./partials/head.ejs') %>

<body>
	<div class="text-center register_container reg-body">
		<h1> Register </h1>
		<% if (errors) { %>
			<ul>
			<% for (const err of errors) { %>
				<li> <%- err.msg %> </li>	
			<% } %>
			</ul>
		<% } %>
		<form id='register' action='/users/register' method='POST'>
			<div class='form-floating'>
				<input id='floatingInput' type='text' name='name' placeholder='Name' required/> 
			</div>

			<div class='form-floating'> 
				<input id='floatingInput' type='text' name='email' placeholder='Email' required/>
			</div>
			<div class='form-floating'> 
				<input id='floatingInput' type='text' name='password' placeholder='Password' required/>
			</div>
			<div class='form-floating'> 
				<input id='floatingInput' type='text' name='password2' placeholder='Confirm Password' required/>
			</div>
			<div>
				<input type='submit' value="Register"/>
			</div>
			<a href="/users/login"> Already have an account? </a>
		</form>
	</div>

<%- include('./partials/footer.ejs') %>

